# EcoVision Backend Environment Variables
# Copy this file to .env and update the values as needed

# Security (IMPORTANT: Change this in production!)
SECRET_KEY=django-insecure-change-this-to-a-random-secret-key-in-production

# Debug mode (set to False in production)
DEBUG=True

# Database Configuration
# For SQLite (default - no setup required)
DATABASE_ENGINE=sqlite3

# For MongoDB (uncomment and configure if using MongoDB)
# DATABASE_ENGINE=mongodb
# MONGODB_URL=mongodb://localhost:27017
# MONGODB_NAME=ecovision_db

# CORS settings (for frontend communication)
CORS_ALLOW_ALL_ORIGINS=True

# File upload settings
MEDIA_ROOT=media
STATIC_ROOT=staticfiles

# API Configuration
API_VERSION=v1

# Computer Vision Model Settings
MODEL_PATH=models/
DEFAULT_MODEL=mock  # Change to 'yolo' or 'tensorflow' when using real models

# Logging
LOG_LEVEL=INFO

# Email Configuration (for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
